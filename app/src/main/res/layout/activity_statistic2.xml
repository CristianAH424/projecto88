<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2AA5C"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".StatisticActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#407842"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:elevation="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Carton"
                android:textAlignment="center"
                android:textColor="#ABD9EE"
                android:textSize="32sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textViewTotalCarton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="000 kl"
                android:textAlignment="center"
                android:textColor="#ABD9EE"
                android:textSize="32dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textCobre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cobre"
                android:textAlignment="center"
                android:textColor="#CDDC39"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTotalCobre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="000 kl"
                android:textAlignment="center"
                android:textColor="#CDDC39"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textVidrio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="vidrio"
                android:textAlignment="center"
                android:textColor="#36AFE6"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewTotalvidrio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="000 kl"
                android:textAlignment="center"
                android:textColor="#36AFE6"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>



            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="plastic"
                    android:textAlignment="center"
                    android:textColor="#EFE7A1"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewTotalPlastic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="000kl"
                    android:textAlignment="center"
                    android:textColor="#EFE7A1"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total pagado:"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewTotalPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$500.000"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="358dp"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:text="Mes de Mayor registro"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="carton"
            android:textColor="#010B0F"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="3dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewMonthMaxCarton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Agosto"
                android:textAlignment="center"
                android:textColor="#ABD9EE"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textViewMaxCartonQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00 kl"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="32sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewNameMes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cobre"
            android:textColor="#060700"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMonthMaxCobre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Agosto"
                android:textAlignment="center"
                android:textColor="#CDDC39"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textViewMaxCobreQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00 kl"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="32sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewNameMesVidrio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="vidrio"
            android:textColor="#00070B"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMonthMaxVidrio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Agosto"
                android:textAlignment="center"
                android:textColor="#36AFE6"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textViewMaxVidrioQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00 kl"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="32sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewNameplastico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="plastico"
            android:textColor="#090800"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="3dp"

            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMonthMaxPlastico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Agosto"
                android:textAlignment="center"
                android:textColor="#EFE7A1"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/textViewMaxPlasticQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00 Kl"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="32sp" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>

